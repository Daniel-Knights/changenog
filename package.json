{
  "name": "changenog",
  "version": "0.0.1",
  "description": "Changelog automation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "checks": "pnpm lint && pnpm typecheck",
    "changenog": "tsx ./index.ts",
    "release:patch": "pnpm run checks && pnpm build && pnpm run changenog && pnpm version patch && pnpm publish",
    "release:minor": "pnpm run checks && pnpm build && pnpm run changenog && pnpm version minor && pnpm publish",
    "release:major": "pnpm run checks && pnpm build && pnpm run changenog && pnpm version major && pnpm publish"
  },
  "author": "Donk",
  "license": "ISC",
  "keywords": [
    "changelog",
    "automation"
  ],
  "type": "module",
  "bin": {
    "changenog": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.5.4",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-define-config": "^1.23.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.2",
    "tsx": "^3.12.7",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "gitlog": "^4.0.8"
  }
}
